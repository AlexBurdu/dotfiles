{
  "permissions": {
    "allow": [
      "Bash(command tmux rename-window *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/tmux/hooks/tmux-status-hook.sh activity"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_FILE_PATH\" in *.bzl) buildifier \"$CLAUDE_FILE_PATH\";; esac"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_FILE_PATH\" in *.kt) ktfmt --kotlinlang-style \"$CLAUDE_FILE_PATH\";; esac"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set-option -p @pilot-workdir \"$(dirname \"$CLAUDE_FILE_PATH\")\" 2>/dev/null; true"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set-option -p @pilot-workdir \"$(dirname \"$CLAUDE_FILE_PATH\")\" 2>/dev/null; true"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/tmux/hooks/tmux-status-hook.sh working"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/tmux/hooks/tmux-status-hook.sh working"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/tmux/hooks/tmux-status-hook.sh waiting"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/tmux/hooks/tmux-status-hook.sh ready"
          }
        ]
      }
    ]
  }
}
